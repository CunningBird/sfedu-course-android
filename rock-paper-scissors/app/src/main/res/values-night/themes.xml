<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RockPaperScissors" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="text_view_color">@color/text_view_night</item>
        <item name="radio_button_color">@color/radio_button_night</item>
        <item name="play_button_color">@color/play_button_night</item>
        <item name="text_view_size">@dimen/text_view_night</item>
        <item name="radio_button_size">@dimen/radio_button_night</item>
        <item name="play_button_size">@dimen/play_button_night</item>

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
